{
  "name": "mrbro.dev",
  "version": "0.0.0",
  "description": "My portfolio.",
  "keywords": [
    "portfolio",
    "developer",
    "blog",
    "vite",
    "typescript",
    "react",
    "github-pages"
  ],
  "homepage": "https://mrbro.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcusrbrown/marcusrbrown.github.io.git"
  },
  "license": "MIT",
  "author": "Marcus R. Brown <marcus@mrbro.dev>",
  "type": "module",
  "main": "src/main.tsx",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "fix": "eslint --fix",
    "lint": "eslint",
    "prepare": "simple-git-hooks",
    "preview": "vite preview",
    "setup-hooks": "simple-git-hooks",
    "analyze-build": "tsx scripts/analyze-build.ts",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:codegen": "playwright codegen",
    "test:accessibility": "playwright test --project=accessibility",
    "test:accessibility:headed": "playwright test --project=accessibility --headed",
    "test:visual": "playwright test --project=visual-tests",
    "test:visual:headed": "playwright test --project=visual-tests --headed",
    "test:visual:update": "playwright test --project=visual-test --update-snapshots",
    "test:visual:artifacts": "node scripts/visual-artifact-manager.mjs",
    "test:visual:artifacts:clean": "node scripts/visual-artifact-manager.mjs clean",
    "test:visual:artifacts:analyze": "node scripts/visual-artifact-manager.mjs analyze",
    "test:visual:artifacts:report": "node scripts/visual-artifact-manager.mjs report",
    "test:performance": "lhci autorun",
    "test:performance:mobile": "lhci autorun --config=lhci-mobile.config.js",
    "test:performance:desktop": "lhci autorun --config=lhci-desktop.config.js",
    "test:performance:budgets": "tsx scripts/performance-budgets.ts",
    "test:performance:regression": "tsx scripts/performance-regression.ts",
    "test:performance:dashboard": "tsx scripts/performance-dashboard.ts",
    "test:performance:artifacts": "tsx scripts/performance-artifacts.ts",
    "test:performance:full": "npm run test:performance && npm run test:performance:budgets && npm run test:performance:dashboard && npm run test:performance:artifacts",
    "test:all": "vitest run && playwright test",
    "badges": "node scripts/generate-test-badges.mjs",
    "badges:update": "npm run test -- --coverage && npm run badges",
    "dashboard": "node scripts/test-dashboard.mjs",
    "dashboard:update": "npm run test:all && npm run dashboard",
    "configure:branch-protection": "node scripts/configure-branch-protection.mjs",
    "artifacts": "node scripts/artifact-management.mjs",
    "artifacts:cleanup": "node scripts/artifact-management.mjs cleanup",
    "artifacts:optimize": "node scripts/artifact-management.mjs optimize",
    "artifacts:full": "node scripts/artifact-management.mjs full"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,yaml}": [
      "eslint --fix"
    ]
  },
  "prettier": "@bfra.me/prettier-config/120-proof",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@bfra.me/eslint-config": "^0.25.0",
    "@bfra.me/prettier-config": "^0.16.0",
    "@bfra.me/tsconfig": "^0.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.8.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "happy-dom": "^18.0.1",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.2",
    "prettier": "^3.3.3",
    "shiki": "^3.8.1",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.6.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "^10.13.1"
  }
}
